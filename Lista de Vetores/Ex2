algoritmo EncontraPosiçãoDoPrimeiroElementoDiferente
var
    i, n: inteiro
    A, B: vetor[1..320] de real
    iguais: 
início
    escreva("Digite um número estritamente positivo e menor do que 321")
    leia(n)
    enquanto n <= 0 ou n > 320 faça
        escreva("Número inválido")
        leia(n)
    fim enquanto
    para i de 1 até n faça
        leia(A[i])
    fim para
    para i de 1 até n faça
        leia(B[i])
    fim para
    i <- 1
    enquanto i <= n e A[i] = B[i] faça
        i <- i + 1
    fim enquanto
    se i <= n então 
        escreva(i)
    senão
        escreva("0")
    fim se
fim algoritmo
